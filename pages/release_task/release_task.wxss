/* pages/release_task/release_task.wxss */
.page{
  background-color: #fff;
  overflow-x: hidden;
  overflow-y: auto;
}
.partone,.parttwo,.partthree{
  height: 100rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #ececec;
}
.headpcl,.contactwechatnumph,.demandpcl,.paypcl{
  font-size: 30rpx;
}
.head,.contactwechatnum,.pay{
  height: 100rpx;
}
.demand{
  width: 100%;
  height: 400rpx;
  line-height: 1.5;
}
.detail .detaildemand{
  margin-left: 30rpx;
  word-wrap:break-word;
  word-spacing:30rpx;
  margin-right: 30rpx;
  height: 400rpx;
  margin-top: 20rpx;
  border-bottom: 1px solid #ececec;
}

.choose .pay{
  margin-left: 30rpx;
  height: 100rpx;
  width: 100%;
  border-top: 1px solid #ececec;
  border-bottom: 1px solid #ececec;
} 
.choose image{
  width: 30rpx;
  height: 30rpx;
  float: right;
  margin-right: 20rpx; 
  margin-top: 40rpx;
}
.choose{
  font-family: serif;
  font-size: 30rpx;
  height: 650rpx;
}
.choosetime{
  margin-left: 30rpx; 
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ececec;
}
.choosedevelop,.chooselanguage,.choosecity{
  margin-left: 30rpx; 
  line-height: 100rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #ececec;
}

.developtypeselect{
  position: fixed;
  top: 50%;
  left: 50%;
  width: 80%;
  height: 800rpx;
  transform:translate(-50%,-50%);
  overflow-y: scroll;
  background-color: #fff;
  border-radius: 10rpx;
  font-family: serif;
  font-size: 30rpx;
  z-index: 999;
} 

/* 设置遮罩样式 */
.cover{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  z-index: 2;
  background-color: #000;
  opacity: 0.8;
} 
/* 弹出框的样式 */
radio{
  margin-top: 30rpx;
  margin-left: 50rpx;
}
radio:nth-last-child(1){
  margin-bottom: 30rpx;
}

.developlanguageselect{
  position: fixed;
  top: 50%;
  left: 50%;
  width: 80%;
  height: 800rpx;
  transform:translate(-50%,-50%);
  overflow-y: scroll;
  background-color: #fff;
  border-radius: 10rpx;
  font-family: serif;
  font-size: 30rpx;
  z-index: 999;
} 
/* 按钮样式 */
.buttonview{
  text-align: center; 
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
.buttonsize{
    margin-top: 30rpx;
  width: 90%;
  margin-left: 6%;
  line-height: 100rpx;
  height: 100rpx;
} 
/* 选择内容最后的结果的样式 */
.keytext{
  margin-left: 30rpx;
}