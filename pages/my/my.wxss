.header {
width: 100%;
height: 500rpx;
display: flex;
flex-direction: column;
text-align: center;
border-bottom: 30rpx solid #ECECEC;
 background: -webkit-linear-gradient(rgb(94, 183, 250), #1E9FFF); 
}

.hr {
  width: 13%;
  height: 1px;
  margin-left: 0;
  background-color: #fff;
}

.header-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 200rpx;
  margin-left: 37%;
}

.header text {
  text-align: center;
  font-size: 16px;
  line-height: 100rpx;
}

.mytask {
  height: 100rpx;
  line-height: 100rpx;
}

.menu {
  width: 100%;
  display: flex;
  flex-direction: column;
  border: 1px solid rgb(215, 215, 215);
  /* margin-top: 30rpx; */
}

.menu-item {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  line-height: 100rpx;
  text-indent: 0.5em;
  display: flex;
  flex-direction: row;
}

.icon {
  float: left;
  margin-left: 30rpx;
  width: 60rpx;
  margin-top: 20rpx;
  height: 60rpx;
}

.next {
  float: right;
  position: absolute;
  margin-top: 30rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.credit-score {
  position: relative;
  left: 30rpx;
  top: 30rpx;
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  box-shadow: 0 0 5rpx red;
  background-color: red;
  text-indent: 0;
  text-align: center;
  color: #fff;
  line-height: 45rpx;
}
